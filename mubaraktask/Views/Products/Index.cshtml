@model IEnumerable<mubaraktask.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <div class="section-padding">
        <div class="row">

            <div class="col-md-6">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>

            </div>

            <div class="col-md-6">
                <h3 style="float: right">Product View</h3>

            </div>
        </div>
        <table class="table footable demo table-bordered table-striped" data-filter="#filter" data-filter-text-only="true" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    
                    <td>
                        <img src="~/@item.Photo" class="thumbnail" style="width:100px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastUpdated)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
<script type="text/javascript">
    $(function () {

        $(document).ready(function () {
            $('#table').DataTable({
                colReorder: true,
                "language": {
                    "search": "search"
                },
                "lengthChange": true,
                dom: 'lBfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        title: 'Product',
                        exportOptions: {
                            columns: [0, 2, 3]


                        },
                        text: 'Excel'

                    },
                    {
                        extend: 'print',
                        title: 'Product',
                        exportOptions: {
                            columns: [0, 2, 3]


                        },
                        text: ' Print table'

                    },

                ],
            });

        });

    });
</script>